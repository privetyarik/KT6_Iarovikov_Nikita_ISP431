<Page x:Class="KT6Iarovikov.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KT6Iarovikov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel>
        <Label Margin="0,120,0,0"
               HorizontalAlignment="Center" Content="Логин:"
               FontFamily="Comic Sans MS"></Label>
        <TextBox Width="100" Height="20" 
                 x:Name="LoginTextBox"></TextBox>
            <Label HorizontalAlignment="Center" Content="Пароль:"
            FontFamily="Comic Sans MS"></Label>
            <PasswordBox Width="100" Height="20"
                         x:Name="PasswordTextBox"></PasswordBox>
            <Button Width="100" Height="20" Margin="10" 
             Content="Войти" Background="#FF498C51" 
             Click="LoginButton_Click" ></Button>
        </StackPanel>
    </Grid>
</Page>
